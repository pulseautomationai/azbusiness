{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "build/client",
  "functions": {
    "api/index.js": {
      "maxDuration": 30,
      "includeFiles": "build/server/**"
    }
  },
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index"
    }
  ]
}