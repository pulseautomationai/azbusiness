{
  "buildCommand": "npm run build",
  "outputDirectory": "build/client",
  "functions": {
    "api/index.js": {
      "maxDuration": 30,
      "includeFiles": "build/server/**"
    }
  },
  "rewrites": [
    {
      "source": "/assets/(.*)",
      "destination": "/assets/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/api/index"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}