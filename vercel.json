{
  "buildCommand": "npm run build",
  "outputDirectory": "build/client",
  "functions": {
    "api/index.js": {
      "maxDuration": 30,
      "includeFiles": "build/server/**"
    }
  },
  "rewrites": [
    {
      "source": "/assets/(.*)",
      "destination": "/assets/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/api/index"
    }
  ]
}